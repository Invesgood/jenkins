pipeline {
    agent any

    environment {
        DOCKER_IMAGE = "my-app-image"
        DOCKER_CONTAINER = "my-app-container"
    }

    stages {
        stage('Checkout') {
            steps {
                echo "ğŸ”„ Checking out source code..."
                checkout scm
            }
        }

        stage('Build App') {
            steps {
                echo "ğŸ”¨ Building application..."
                sh 'npm install'
                sh 'npm run build'
            }
        }

        stage('Build Docker Image') {
            steps {
                echo "ğŸ³ Building Docker image..."
                sh "docker build -t ${DOCKER_IMAGE} ."
            }
        }

        stage('Stop Old Container') {
            steps {
                echo "ğŸš« Stopping and removing old container..."
                sh "docker rm -f ${DOCKER_CONTAINER} || true"
            }
        }

        stage('Deploy') {
            steps {
                echo "ğŸš€ Deploying to Docker container..."
                sh "docker run -d --name ${DOCKER_CONTAINER} -p 4000:4000 ${DOCKER_IMAGE}"
            }
        }
    }

    post {
        success {
            echo "ğŸ‰ Deployment successful!"
        }
        failure {
            echo "âŒ Deployment failed!"
        }
    }
}