pipeline {
    agent any

    environment {
        DEPLOY_PATH = "/var/www/html"
    }

    stages {
        stage('Checkout') {
            steps {
                echo 'ğŸ“¥ Checkout source code...'
                checkout scm
            }
        }

        stage('Build (optional)') {
            steps {
                echo 'âš™ï¸ Build step (skip if not needed)...'
                // Misalnya: npm run build, atau bisa dikosongkan
                // sh 'npm install && npm run build'
            }
        }

        stage('Deploy') {
            steps {
                echo "ğŸš€ Deploying to local server folder: ${DEPLOY_PATH}"
                sh """
                    rsync -avz --delete ./ ${DEPLOY_PATH}/
                """
            }
        }

        stage('Post-deploy check') {
            steps {
                echo 'âœ… Deployment complete!'
                sh "ls -l ${DEPLOY_PATH}"
            }
        }
    }

    post {
        success {
            echo 'ğŸ‰ Pipeline success!'
        }
        failure {
            echo 'âŒ Pipeline failed. Check logs.'
        }
    }
}
