pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/kamu/nama-repo.git' // Ganti sesuai repo kamu
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    dockerImage = docker.build("my-static-web:${env.BUILD_NUMBER}")
                }
            }
        }

        stage('Run Docker Container') {
            steps {
                script {
                    sh 'docker stop my-static-web || true'
                    sh 'docker rm my-static-web || true'
                    sh "docker run -d -p 8080:80 --name my-static-web my-static-web:${env.BUILD_NUMBER}"
                }
            }
        }
    }
}
