pipeline {
    agent any

    environment {
        IMAGE_NAME = "web-statis:v1"
        CONTAINER_NAME = "web-statis"
        PORT = "7000"
    }

    stages {
        stage('Checkout') {
            steps {
                echo 'üì• Checkout source code...'
                checkout scm
            }
        }

        stage('Build Docker Image') {
            steps {
                echo "üê≥ Building Docker image: ${IMAGE_NAME}"
                sh "docker build -t ${IMAGE_NAME} ."
            }
        }

        stage('Stop Old Container') {
            steps {
                echo "üßπ Stopping and removing old container (if any)..."
                sh "docker stop ${CONTAINER_NAME} || true"
                sh "docker rm ${CONTAINER_NAME} || true"
            }
        }

        stage('Run New Container') {
            steps {
                echo "üöÄ Running new container on port ${PORT}"
                sh """
                    docker run -d \
                        --name ${CONTAINER_NAME} \
                        -p ${PORT}:80 \
                        ${IMAGE_NAME}
                """
            }
        }
    }

    post {
        success {
            echo "üéâ Deployment success! Access the site at http://<IP-VPS>:${PORT}"
        }
        failure {
            echo "‚ùå Deployment failed. Check logs for details."
        }
    }
}
